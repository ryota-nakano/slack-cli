# Slack API Token
# ユーザーとして投稿: SLACK_USER_TOKEN (推奨)
# Botとして投稿: SLACK_BOT_TOKEN
SLACK_USER_TOKEN=xoxp-your-user-token-here

# または Bot Token
# SLACK_BOT_TOKEN=xoxb-your-bot-token-here

# エディタ (オプション)
# デフォルト: vim
# EDITOR=nano

# ===== 表示設定 =====
# 初期表示メッセージ数 (デフォルト: 30)
INITIAL_MESSAGE_COUNT=30

# メッセージ追加表示数 (デフォルト: 30)
MESSAGE_INCREMENT=30

# 履歴保持数 (デフォルト: 20)
HISTORY_LIMIT=20

# 履歴保持日数 (デフォルト: 7日)
HISTORY_RETENTION_DAYS=7

# テキストプレビュー最大長 (デフォルト: 100)
TEXT_PREVIEW_LENGTH=100

# ===== API/キャッシュ設定 =====
# キャッシュ有効期限（ミリ秒） (デフォルト: 3600000 = 1時間)
CACHE_TTL=3600000

# 検索結果表示数 (デフォルト: 20)
SEARCH_RESULT_LIMIT=20

# メンション検索結果表示数 (デフォルト: 10)
MENTION_SEARCH_LIMIT=10

# リアクション取得数 (デフォルト: 20)
REACTION_FETCH_LIMIT=20

# ユーザー一括取得の最大数 (デフォルト: 50)
USER_BATCH_LIMIT=50

# ===== 自動応答設定 (オプション) =====
# OpenAI APIキー（自動応答機能に必要）
# OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAIモデル (デフォルト: gpt-4o-mini)
# OPENAI_MODEL=gpt-4o-mini
